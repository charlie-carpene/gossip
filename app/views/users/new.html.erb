<br/><h1>Créer un compte</h1>

  <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag "Prénom" %>
    <%= text_field_tag 'first_name' %>
    <br /> <br />

    <%= label_tag 'Nom de famille' %>
    <%= text_field_tag 'last_name' %>
    <br /> <br />

    <%= label_tag 'Email' %>
    <%= text_field_tag 'email' %>
    <br /> <br />

    <%= label_tag 'Mot de passe' %>
    <%= text_field_tag 'password' %>
    <br /> <br />

    <%= label_tag 'Ville de résidence' %>
    <%= text_field_tag 'origin' %>
    <br /> <br />

    <%= label_tag 'Age' %>
    <%= text_field_tag 'age' %>
    <br /> <br />

    <%= label_tag 'Description' %>
    <%= text_area_tag 'description' %>
    <br /> <br />

    <%= submit_tag "Créer un compte" %>

  <% end %>
