<% if @potin != nil %>
  <% if @potin.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
      <p><%= flash.now[:notice] %>
      <ul>
        <% @potin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<br/><h1>Crée un potin !</h1>
<p>Balance ton potin via le formulaire ci-dessous</p>

  <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag "Par ici c'est ton titre :" %>
    <%= text_field_tag 'title', 'Titre' %>
    <br /> <br />

    <%= label_tag 'Et là ton potin :' %>
    <%= text_area_tag 'body', 'Contenu du potin' %>
    <br /> <br />

    <%= label_tag 'Enfin ton prénom :' %>
    <%= text_field_tag 'author' %>
    <br /> <br />

    <%= submit_tag "Créer un potin" %>

  <% end %>
